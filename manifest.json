{
    "name": "Zoom.it",
    "version": "1.1",
    "description": "View and share high-resolution images in full detail with Zoom.it. This extension adds a right-click context menu item to links, images and pages.",
    "icons": {
        "16": "zoomit-16.png",
        "48": "zoomit-48.png",
        "128": "zoomit-128.png"
    },
    "background_page": "background.html",
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
